# API configuration
API_PORT=3005
API_PREFIX=/api/v1

# CORS configuration
CORS_ORIGIN=http://localhost:3006,http://192.168.0.101:3006

# Swagger API documentation
SWAGGER_ENABLE=1

# Database ORM configuration
DATABASE_URL=postgresql://nestjs:password@localhost:5432/nestjs?schema=public

FRONTEND_URL=http://localhost:3006

# JWT configuration (REQUIRED - Must be changed in production)
# JWT_SECRET: Must be at least 32 characters long. Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-change-this-in-production
# JWT_ISSUER: Unique identifier for your application
JWT_ISSUER=WhatsappPeleziBotAPI

# Access to the health route
HEALTH_TOKEN=ThisMustBeChanged

# Whatsapp Bot configuration
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token

#SMTP configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password-or-app-specific-password